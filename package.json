{
  "name": "bebar",
  "version": "0.1.49",
  "license": "MIT",
  "description": "Mustache templates + data loader utility",
  "author": "Yoann Diguet",
  "main": "./dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "bebar": "bin/bebar"
  },
  "files": [
    "dist",
    "prefabs"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "publish": "npm publish --access public",
    "sample": "node dist/index.js -f *.bebar -w ./sample",
    "format": "prettier --write ./src/**/*.ts ./test/**/*.ts ./sample/**/*.{ts,js,json,js} ./prefabs/**/*.{ts,js,json,js}"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/bebar.esm.js",
  "size-limit": [
    {
      "path": "dist/bebar.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/bebar.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/figlet": "^1.2.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^4.3.6",
    "size-limit": "^4.9.1",
    "ts-node": "^9.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "colors.ts": "^1.0.20",
    "commander": "^6.2.1",
    "fast-xml-parser": "^3.17.5",
    "figlet": "^1.5.0",
    "file-eval": "^2.0.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "jsonpath": "^1.0.2",
    "lodash": "^4.17.20",
    "prettier": "^2.2.1",
    "yaml": "^1.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oYo-fr/bebar.git"
  },
  "keywords": [
    "handlebars",
    "mustache",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/oYo-fr/bebar/issues"
  },
  "homepage": "https://github.com/oYo-fr/bebar#readme"
}
